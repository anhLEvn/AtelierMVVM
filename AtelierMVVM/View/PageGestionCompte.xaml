<Page x:Class="AtelierMVVM.View.PageGestionCompte"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AtelierMVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageGestionCompte"
      Background="Beige">

    <Grid>
        <TextBox x:Name="tbxLogin" HorizontalAlignment="Left" Height="34" Margin="298,63,0,0" TextWrapping="Wrap" 
                 Text="{Binding Path=CompteVM.Login}" VerticalAlignment="Top" Width="142"/>
        <TextBox x:Name="tbxPassword" HorizontalAlignment="Left" Height="34" Margin="298,133,0,0" TextWrapping="Wrap" 
                 Text="{Binding Path=CompteVM.Password}" VerticalAlignment="Top" Width="142"/>
        <Label Content="Nom Compte:" HorizontalAlignment="Left" Height="31" Margin="172,63,0,0" VerticalAlignment="Top" Width="96"/>
        <Label Content="Password:" HorizontalAlignment="Left" Height="31" Margin="172,129,0,0" VerticalAlignment="Top" Width="96"/>
        <Button Content="Enregistre" HorizontalAlignment="Left" Height="29" Margin="316,229,0,0" VerticalAlignment="Top" Width="168" Click="Enregistre_Click"
                />

    </Grid>
</Page>
